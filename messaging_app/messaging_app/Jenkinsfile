pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS = credentials('github-credentials')
        PYTHON = 'python3'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/YOUR_USERNAME/YOUR_REPO.git',
                    credentialsId: "${GITHUB_CREDENTIALS}"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    ${PYTHON} -m venv venv
                    source venv/bin/activate
                    pip3 install --upgrade pip
                    pip3 install -r messaging_app/requirements.txt
                    pip3 install pytest pytest-html
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    source venv/bin/activate
                    cd messaging_app
                    pytest --junitxml=report.xml --html=report.html --self-contained-html
                '''
            }
            post {
                always {
                    junit 'messaging_app/report.xml'
                    archiveArtifacts artifacts: 'messaging_app/report.html', fingerprint: true
                }
            }
        }
    }

    triggers {
        // Manual trigger only â€“ run from Jenkins UI
    }
}
