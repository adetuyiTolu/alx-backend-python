#!/bin/bash

# kurbeScript
# Script to start a local Kubernetes cluster with Minikube

# Step 1: Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "❌ Minikube is not installed. Please install it first:"
    echo "👉 https://minikube.sigs.k8s.io/docs/start/"
    exit 1
else
    echo "✅ Minikube is installed."
fi

# Step 2: Start Minikube cluster
echo "🚀 Starting Minikube cluster..."
minikube start

# Step 3: Verify cluster info
echo "🔎 Verifying Kubernetes cluster status..."
kubectl cluster-info

# Step 4: List available pods (in all namespaces)
echo "📦 Retrieving available pods..."
kubectl get pods --all-namespaces
