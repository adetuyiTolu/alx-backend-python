#!/bin/bash

# kurbeScript
# Script to start a local Kubernetes cluster with Minikube

# Step 1: Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it first:"
    echo "ğŸ‘‰ https://minikube.sigs.k8s.io/docs/start/"
    exit 1
else
    echo "âœ… Minikube is installed."
fi

# Step 2: Start Minikube cluster
echo "ğŸš€ Starting Minikube cluster..."
minikube start

# Step 3: Verify cluster info
echo "ğŸ” Verifying Kubernetes cluster status..."
kubectl cluster-info

# Step 4: List available pods (in all namespaces)
echo "ğŸ“¦ Retrieving available pods..."
kubectl get pods --all-namespaces
